@model IEnumerable<YeneMercha.Models.Image>

@{
    ViewBag.Title = "Image";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Image</h2>


<div>
    @Html.ActionLink("Add Image", "ImageAdd", "Admin")
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink("Details", "ImageDetail", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
