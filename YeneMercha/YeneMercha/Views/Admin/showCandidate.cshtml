@model IEnumerable<YeneMercha.Models.Candidate>

@{
    ViewBag.Title = "showCandidate";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Candiadte Name
        </th>
        <th>
            About candidate
        </th>
        <th>
          Action
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Election.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.about)
        </td>

        <td>
            @Html.ActionLink("Edit", "EditCandidate", new { id=item.Id }) |
            @Html.ActionLink("Details", "CandidateDetails", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteCandidate", new { id=item.Id })
        </td>
    </tr>
}

</table>
